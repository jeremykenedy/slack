{
    "name": "jeremykenedy/slack",
    "description": "A simple PHP package for sending messages to Slack.",
    "keywords": ["laravel", "slack"],
    "license": "MIT",
    "authors": [
        {
            "name": "maknz",
            "email": "github@mak.geek.nz"
        },
        {
            "name": "jeremykenedy",
            "email": "jeremykenedy@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~6.0|~5.0|~4.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "mockery/mockery": "0.9.*"
    },
    "suggest": {
        "jeremykenedy/slack-laravel": "Required for Laravel support",
        "nexylan/slack-bundle": "Required for Symfony bundle support"
    },
    "autoload": {
        "psr-4": {
            "jeremykenedy\\Slack\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
